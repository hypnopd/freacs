%h2=t("users.users")

=link_to t(".new_user"), new_user_registration_path

-if @users
  %table
    %thead
      %tr
        %th=t('.email')
        %th=t("companies.company")
        %th=t(".confirmed")
        %th=t('actions')
    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user.email, user_path(user), :class => "email"
          %td= user.company.name
          %td= confirmed(user.confirmed?)
          %td
            = link_to t('edit'), edit_user_registration_path(user), :class => "edit"
            = link_to t("delete"), user_path(user), :method => :delete, :confirm => t("delete_confirmation")
