= form_for([@auction, @item]) do |f|
  -unless @item.errors.empty?
    .error
      - @item.errors.full_messages.each do |msg|
        %li= msg

  = f.label t("items.name")
  %br/
  = f.text_field :name
  %br/
  = f.label t("items.description")
  %br/
  = f.text_area :description
  %br/
  = f.label t("items.unit")
  %br/
  = f.text_field :unit
  %br/
  = f.label t("items.amount")
  %br/
  = f.text_field :amount
  %br/
  = f.label t("items.min")
  %br/
  = f.number_field :min, :min => 0
  %br/
  = f.label t("items.max")
  %br/
  = f.number_field :max, :min => 0
  %br/
  = f.submit t('save')
