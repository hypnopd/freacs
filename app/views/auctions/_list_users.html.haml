%h3=t("users.users")
- if @auction.users
  %table
    %thead
      %tr
        %th=t("users.email")
        %th=t("companies.company")
        %th=t("actions")
    %tbody
      - @auction.users.each do |user|
        %tr
          %td= link_to user.email, user_path(user)
          %td= user.company.name
          %td= link_to t("delete"), auction_auction_user_path(user), :method => :delete, :confirm => t("delete_confirmation")
%br/
= link_to t(".add_exist_users"), new_auction_auction_user_path(@auction)
= link_to t(".add_user"), new_user_registration_path
%hr