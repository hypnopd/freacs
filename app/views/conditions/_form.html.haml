= form_for @condition do |f|
  -if @condition.errors.any?
    #error_explanation
      %h2= "#{pluralize(@condition.errors.count, "error")} prohibited this condition from being saved:"
      %ul
        - @condition.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :percentage
    = f.number_field :percentage
  .actions
    = f.submit 'Save'
