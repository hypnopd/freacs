.login_form
  %h2=t("login")
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %div
      = f.label :email
      %br/
      = f.email_field :email
    %div
      = f.label t("password")
      %br/
      = f.password_field :password
    - if devise_mapping.rememberable?
      %div
        = f.check_box :remember_me
        = f.label t("remember_me")
    %div= f.submit t("login_button")
  -#= render "links"